<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>DisplayProducts</servlet-name>
        <servlet-class>Servlets.DisplayProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>Servlets.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProcess</servlet-name>
        <servlet-class>Servlets.AddProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>Servlets.UpdateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProcess</servlet-name>
        <servlet-class>Servlets.UpdateProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>Servlets.DeleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProcess</servlet-name>
        <servlet-class>Servlets.DeleteProcess</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayProducts</servlet-name>
        <url-pattern>/DisplayProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/AddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProcess</servlet-name>
        <url-pattern>/AddProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/UpdateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProcess</servlet-name>
        <url-pattern>/UpdateProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/DeleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProcess</servlet-name>
        <url-pattern>/DeleteProcess</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>DisplayProducts</welcome-file>
    </welcome-file-list>
</web-app>
